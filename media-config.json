{
    "display": {
        "width": 1920,
        "height": 1080,
        "fullscreen": true,
        "surface_only": false
    },
    "photos": {
        "path": "photos/",
        "files": [ "*.jpg" ],
        "time": 10
    },
    "videos": {
        "path": "videos/",
        "files": [ "*.f4v", "*.mov", "*.mp4" ],
        "probability": 0.1
    },
    "announcements": {
        "source": "mongodb",
        "file": "announcements.json",
        "db_conn_string": "MONGO_DB_CONN_STRING",
        "db_name": "MONGO_DB_DATABASE",
        "db_collection": "MONGO_DB_COLLECTION",
        "font": "/usr/share/fonts/truetype/dejavu/DejaVuSerif.ttf",
        "time": 15,
        "probability": 0.1,
        "spacing": 10
    },
    "date_fmt": "%Y-%m-%d"
}